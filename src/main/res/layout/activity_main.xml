<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editeTextAmout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_style"
        android:gravity="center"
        android:text="entrer un chiffre"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/bntCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:shadowRadius="1"
        android:text="@string/bntCompute"
        app:backgroundTint="#03A9F4"
        app:cornerRadius="@dimen/cardview_default_radius" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="15dp"

        android:background="@drawable/text_view_style"
        android:gravity="center"
        android:padding="10dp"

        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textColorHighlight="#FFEB3B"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2500BCD4">


    </ListView>


</LinearLayout>